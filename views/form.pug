extends layout 

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1 Sign Up
                form(method='POST' action='/login/register')
                    div.form-group
                        label(for="username") Username:
                        input(
                            type="text"
                            name="username"
                            placeholder='Mr Hankey'
                        )
                    div.form-group
                        label(for="email") Email:
                        input(
                            type="email"
                            name="email"
                            placeholder='HankHankey@poop.com'
                        )
                    div.form-group
                        label(for="password") Password:
                        input(
                            type="text"
                            name="password"
                            placeholder='ILikeBigButtsAndICannotLie'
                        )
                    button.btn.btn-primary(type='submit') Sign up
                <br>
                h4 Login
                <a href="/login" class="btn btn-warning">Login</a>