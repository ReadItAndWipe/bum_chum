extends layout

block content
    h1 Rolls Available
    if rolls.length
        table
            tr
                th Name
                th Category
                th Description
            each roll in rolls
                tr
                    td= roll.name
                    td= roll.category
                    td= roll.description
    else
        p No rolls yet :(

    <h3>Subscriptions</h3>
    if subscriptions.length
        table
            tr
                th Size
                th Description
                th Price
            each subscription in subscriptions
                tr
                    td= subscription.size
                    td= subscription.description
                    td= subscription.price
    else
        p No rolls yet :(